<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layout_state_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:background="@color/indigo_lollipop"
        >
        <TextView
            android:id="@+id/state_bluetooth"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:paddingLeft="22dp"
            android:text="Bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/switchActivationBT"
            android:paddingRight="22dp"
            android:layout_alignParentRight="true"
         />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@id/layout_state_bluetooth">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lancer la recherche"
            android:id="@+id/buttonRechercheBT"
            android:layout_centerHorizontal="true"
         />

        <ListView
            android:layout_below="@+id/buttonRechercheBT"
            android:id="@+id/listViewDevicesBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
