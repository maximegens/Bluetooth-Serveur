<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bleutoothserveur.maxime.bluetooth_serveur" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver class=".BTReceiverStateChange"
            android:name="com.bleutoothserveur.maxime.bluetooth_serveur.broadcastReceiver.BTReceiverStateChange">
            <intent-filter android:priority="100">
            </intent-filter>
        </receiver>

        <receiver class=".BTActionFoundAndFinishReceiver"
            android:name="com.bleutoothserveur.maxime.bluetooth_serveur.broadcastReceiver.BTActionFoundAndFinishReceiver">
            <intent-filter android:priority="100">
            </intent-filter>
        </receiver>
    </application>

</manifest>
